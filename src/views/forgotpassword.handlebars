<div class="container">
	<div class="row mt-5">
		<div class="d-flex justify-content-center">
			<h1>Forgot Password</h1>
		</div>
	</div>

	<div class="row m-auto mt-3 justify-content-center">
		<div class="col-sm-10 col-md-8 col-lg-6 d-flex justify-content-center">
			<form class="col-10">
				<div class="form-row">
					<div class="alert alert-light mb-3" role="alert">
						<p class="m-auto">We'll send you a link to reset your password.</p>
					</div>
					<div class="alert alert-info mb-3" role="alert">
						Remember your password? <a href="/login">Log in</a>
					</div>
					<div class="form-group mb-2">
						<input type="email" class="form-control" id="inputRecoveryEmail" placeholder="Email">
					</div>
				</div>
				<div class="form-row justify-content-center">
					<button class="btn btn-primary mt-3" id="send-recovery-link-button">Send link</button>
				</div>
				<div id="send-recovery-link-alert" role="alert" hidden></div>
			</form>
		</div>
	</div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="session.js"></script>