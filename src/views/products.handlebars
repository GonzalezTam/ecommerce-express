<div class="container">
  <div class="row mt-5">
    <h1>Products</h1>
  </div>
  <div class="row mt-3">
    {{#if products.payload.length}}

    <!-- Admin view -->
    {{#if isAdmin}}
    {{#each products.payload}}
    <div class="card m-2 p-0" style="width: 17rem;">
      <img src="http://via.placeholder.com/640x360" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.description}}</p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Price: ${{this.price}}</li>
        <li class="list-group-item">Stock: {{this.stock}}</li>
        <li class="list-group-item">Code: {{this.code}}</li>
        <li class="list-group-item">ID: {{this._id}}</li>
      </ul>
    </div>
    {{/each}}
    {{/if}}

    <!-- User view -->
    {{#unless isAdmin}}
    {{#each products.payload}}
    <div class="card m-2 p-0" style="width: 17rem;">
      <img src="http://via.placeholder.com/640x360" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.description}}</p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Price: ${{this.price}}</li>
        <li class="list-group-item">Stock: {{this.stock}}</li>
        <li class="list-group-item">Code: {{this.code}}</li>
        <li class="list-group-item">ID: {{this._id}}</li>
      </ul>
      <ul class="card-footer m-0 row">
        <button class="justify-content-center m-0 btn btn-secondary btn-sm add-to-cart" data-id={{this._id}}>Add to
          ðŸ›’</button>
      </ul>
    </div>
    {{/each}}
    {{/unless}}

    {{!-- Pagination --}}
    <nav aria-label="Products pagination">
      <ul class="pagination">
        {{#if products.hasPrevPage}}
        <li class="page-item">
          <a class="page-link" href="{{products.prevLink}}" tabindex="-1">Previous</a>
        </li>
        {{/if}}
        {{#each products.loopedPages}}
        <li class="page-item">
          <a class="page-link" href="/products?page={{this.page}}" data-page="{{this}}">{{this.page}}</a>
        </li>
        {{/each}}
        {{#if products.hasNextPage}}
        <li class="page-item">
          <a class="page-link" href="{{products.nextLink}}">Next</a>
        </li>
        {{/if}}
      </ul>
    </nav>

    <!-- If no products -->
    {{else}}
    <p class="m-1">No products available</p>
    {{/if}}
  </div>
</div>

