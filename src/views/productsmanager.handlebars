<div class="container">
  <div class="row mt-4">
    <h1>Add New Product</h1>
  </div>
  <div class="row g-3 mt-2">
    <div class="row">
      <div class="col-4">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" name="title" id="title" value="Product" required>
      </div>
      <div class="col-4">
        <label class="form-label" for="category">Category</label>
        <input class="form-control" type="text" name="category" id="category" value="Category" required>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-3">
        <label class="form-label" for="price">Price</label>
        <input class="form-control" type="number" name="price" id="price" value="100" required>
      </div>
      <div class="col-2">
        <label class="form-label" for="stock">Stock</label>
        <input class="form-control" type="number" name="stock" id="stock" value="5" required>
      </div>
      <div class="col-3">
        <label class="form-label" for="code">Code</label>
        <input class="form-control" type="text" name="code" id="code" value="xxx-1" required>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-8">
        <label class="form-label" for="description">Description</label>
        <input class="form-control" type="text" name="description" id="description"
          value="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt." required>
      </div>
    </div>
    <div class="col-12">
      <button id="submit" class="btn btn-primary btn-sm">Submit</button>
    </div>
  </div>

  <div class="row mt-4">
    <h1>Products</h1>
  </div>

  <table id="productsmanagerTable" class="table table-striped">
    <tr>
      <td><strong>Code</strong></td>
      <td><strong>Product</strong></td>
      <td><strong>Description</strong></td>
      <td><strong>Category</strong></td>
      <td><strong>Price</strong></td>
      <td><strong>Stock</strong></td>
      <td class="text-center"><strong>Edit</strong></td>
      <td class="text-center"><strong>Remove</strong></td>
    </tr>
    {{#if products.payload.length}}
    {{#each products.payload }}
    <tr>
      <td>{{this.code}}</td>
      <td>{{this.title}}</td>
      <td>{{this.description}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td>{{this.stock}}</td>
      <td class="text-center">
        <button data-id={{this._id}} type="button" class="edit-product btn btn-warning btn-sm">‚úçüèª</button>
      </td>
      <td class="text-center">
        <button data-id={{this._id}} type="button" class="remove-product btn btn-danger btn-sm">‚ùå</button>
      </td>
    </tr>
    {{/each}}
    {{else}}
    <tr>
      <td colspan="8" class="text-center">No products found</td>
    </tr>
    {{/if}}
  </table>

  <nav aria-label="Products pagination">
    <ul class="pagination">
      {{#if products.hasPrevPage}}
      <li class="page-item">
        <a class="page-link" href="{{products.prevLink}}" tabindex="-1">Previous</a>
      </li>
      {{/if}}
      {{#each products.loopedPages}}
      <li class="page-item">
        <a class="page-link" href="/productsmanager?page={{this.page}}" data-page="{{this}}">{{this.page}}</a>
      </li>
      {{/each}}
      {{#if products.hasNextPage}}
      <li class="page-item">
        <a class="page-link" href="{{products.nextLink}}">Next</a>
      </li>
      {{/if}}
    </ul>
  </nav>

