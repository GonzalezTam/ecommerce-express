<div class="container">
	<div class="row mt-5">
		<div class="d-flex justify-content-center">
			<h1>Password Reset</h1>
		</div>
	</div>

	<div class="row m-auto mt-3 justify-content-center">
		<div class="col-sm-10 col-md-6 col-lg-6">
			{{#if error}}
			<div class="alert alert-danger" role="alert">
				{{error}}
			</div>
			<div class="alert alert-info mb-3" role="alert">
				<a href="/forgot-password">Send a new link to reset your password</a>
			</div>
			<div class="alert alert-light mb-3" role="alert">
				Remember your password? <a href="/login">Log in</a>
			</div>
			{{/if}}
			{{#if token}}
			<form class="col-9 col-lg-8 m-auto">
				<div class="alert alert-light" role="alert">
					Enter your new password below.
				</div>
				<div class="form-row">
					<div class="form-group mb-2">
						<input type="password" class="form-control" id="inputResetPassword" placeholder="Password" required>
					</div>
					<div class="form-group mb-2">
						<input type="password" class="form-control" id="inputResetPassword2" placeholder="Confirm password"
							required>
					</div>
				</div>
				<div class="form-row justify-content-center">
					<button class="btn btn-primary mt-3" id="reset-password-button">Reset password</button>
				</div>
				<div id="reset-password-alert" role="alert" hidden></div>
			</form>
			{{/if}}
		</div>
	</div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/session.js"></script>