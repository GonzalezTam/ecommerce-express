<div class="container">
  <div class="row mt-5"><h1>Add New Product</h1></div>
  <div class="row g-3 mt-3">
    <div class="row">
      <div class="col-4">
        <label class="form-label" for="title">Nombre</label>
        <input class="form-control" type="text" name="title" id="title" value="Product" required>
      </div>
      <div class="col-4">
        <label class="form-label" for="category">Categoria</label>
        <input class="form-control" type="text" name="category" id="category" value="Category" required>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-3">
        <label class="form-label" for="price">Precio</label>
        <input class="form-control" type="number" name="price" id="price" value="100" required>
      </div>
      <div class="col-2">
        <label class="form-label" for="stock">Stock</label>
        <input class="form-control" type="number" name="stock" id="stock" value="5" required>
      </div>
      <div class="col-3">
        <label class="form-label" for="code">Código</label>
        <input class="form-control" type="text" name="code" id="code" value="xxx-1" required>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-8">
        <label class="form-label" for="description">Descripción</label>
        <input class="form-control" type="text" name="description" id="description" value="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt." required>
      </div>
    </div>
    <div class="col-12">
      <button id="submit" class="btn btn-primary">Guardar</button>
    </div>
</div>

  <div class="row mt-5"><h1>Products</h1></div>
  <div id="products-div" class="row mt-3 mb-5">
    {{#if products.length}}
      {{#each products}}
        <div class="card m-2 p-0" style="width: 17rem;">
          <img src="http://via.placeholder.com/640x360" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Price: ${{this.price}}</li>
            <li class="list-group-item">Stock: {{this.stock}}</li>
            <li class="list-group-item">Code: {{this.code}}</li>
            <li class="list-group-item">ID: {{this._id}}</li>
          </ul>
          <div class="card-footer text-right">
            <li class="list-group-item text-end"><button data-id={{this._id}} type="button" class="remove-product btn btn-danger btn-sm">Remove</button></li>
          </div>
        </div>
      {{/each}}
    {{else}}
      <p class="m-1">No products available.</p>
    {{/if}}
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="client.js"></script>
